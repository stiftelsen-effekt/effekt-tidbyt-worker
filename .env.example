# Server
PORT=8080

# Shared-secret auth (optional)
TIDBYT_WORKER_AUTH_TOKEN=

# Tidbyt device + token
TIDBYT_API_KEY=
TIDBYT_DEVICE_ID=
TIDBYT_INSTALLATION_ID=effekt-donation-alert
TIDBYT_PUSH_BACKGROUND=false
TIDBYT_PUSH_TIMEOUT_MS=30000

# Pixlet
PIXLET_BIN=pixlet
TIDBYT_PIXLET_APPLET=dist/applets/donation_alert.star
PIXLET_RENDER_TIMEOUT_MS=30000

# Batching
TIDBYT_BATCH_WINDOW_MS=8000
TIDBYT_MAX_BATCH_WAIT_MS=60000
TIDBYT_WAIT_FOR_FLUSH=true

# Country label
EFFEKT_COUNTRY_CODE=NO
